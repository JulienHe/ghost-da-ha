{{!< default}}
<main class="main_daha onePost" role="main">
    {{#post}}
    <article class="{{tags separator=" "}}" role="article" itemscope itemtype="http://schema.org/Article">
        {{> navMenu}}
        <div class="pace">
            <div class="pace-progress"></div>
        </div>
        <div class="article_daha">
        <header class="postheader_daha">
            <h1 itemprop="headline">{{title}}</h1>
            <time class="date" itemprop="headline">{{date format='dddd DD MMM YYYY'}}</time>
        </header>
        <div class="postcontent_daha" itemprop="articleBody">
            {{content}}
        </div>
        <hr>
        <ul class="share">
            <li><a href="https://www.facebook.com/sharer.php?u={{url absolute="true"}}" class="facebook">Share on Facebook <span></span></a></li>
            <li><a href="https://twitter.com/intent/tweet?text={{title}}&url={{url absolute="true"}}&via=julien_he" class="twitter">Share on Twitter <span></span></a></li>
            <li><a href="https://plus.google.com/share?url={{url absolute="true"}}" class="google">Share on Google+ <span></span></a></li>
            <li><a href="mailto:?Subject=%20from%20Title&body={{url absolute="true"}}" class="mail">Send an email <span></span></a></li>
        </ul>
        <div id="disqus_thread"></div>
        </div>
    </article>
    {{/post}}
</main>
